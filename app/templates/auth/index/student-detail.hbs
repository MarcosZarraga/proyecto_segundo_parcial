{{outlet}}
 {{!-- <img src="https://humbertocueva.files.wordpress.com/2013/09/secundaria_1.jpg"> --}}

  <div class="row">
    <pre></pre>
    <pre></pre>
    <pre></pre>
    <pre></pre>
    <pre></pre>
    <pre></pre>
    <div class="card" style="width: 18rem;">
          <div class="card-body">
            <p class="card-title">Alumno</p>
            {{input class="card-title" type=text value=model.student.name disabled=true}}
            {{input class="card-title" type=text value=model.student.last_name disabled=true}}
            <p class="card-title">Telefono</p>
            {{input class="card-title" type=text value=model.student.phone disabled=true}}
            <p class="card-title">Email</p>
            {{input class="card-title" type=text value=model.student.email disabled=true}}
          </div>
     </div>
      <div class="card" style="width: 64rem;">
        <div class="card-body">
          <h5 class="card-title">Lección Actual Del alumno</h5>
          <h6 class="card-subtitle mb-4">{{model.student.current_activity.name}} nivel 
          {{model.student.current_activity.level_id}} </h6>
          <p class="card-text">Selecciona una actividad</p>
          {{#if lessonSelected}}
            {{#each activities as |activity|}}
              <p>{{activity.activity_type.name}}</p>
              <button type="submit" class="btn btn-primary" {{action "goToClass" activity model.student on='click' }} >Detalles</button>

            {{/each}}
          {{/if}}
        </div>
      </div>
  </div>

<br>
<br>

<div class="container">
  <div class="row">
    {{#each model.lesson as |lesson|}}
      <div class="col-sm">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <p class="card-title">Nombre de la lección</p>
            {{input class="card-title" type=text value=lesson.name disabled=true}}
            <p class="card-title">Nivel</p>
            {{input class="card-title" type=text value=lesson.level_id disabled=true}}
              <button type="submit" class="btn btn-primary" {{action "changeLesson" model.student lesson on='click' }} >Cambiar Actividad</button>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>