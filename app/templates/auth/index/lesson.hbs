{{outlet}}
<form {{action 'addLesson' on='submit'}}>

    <div class="form-group">
    <label >Nombre de la Clase</label>
    {{input type="text" class="form-control" placeholder="Nombre de la clase" value=name}}

  </div>
  <div class="form-group">
    <label >Nivel</label>
    {{input type="text" class="form-control"  placeholder="Nivel" value=level_id}}

  </div>
  <button type="submit" class="btn btn-primary" >Añadir Clase</button>
</form>

<div class="alert alert-primary" role="alert">
  Lista de clases añadidas
  </div>
    <div class="container">
      <div class="row">
          {{#each model as |lesson|}}
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <p class="card-title">Nombre de la clase</p>
              {{input class="card-title" type=text value=lesson.name}}
              <p class="card-title">Nivel</p>
              {{input class="card-title" type=text value=lesson.level_id}}
                <button type="submit" class="btn btn-primary" {{action "editarLesson" lesson  on='click'}}>Editar</button>
                <button type="submit" class="btn btn-primary" {{action "eliminarLesson" lesson on='click' }} >Eliminar</button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>


